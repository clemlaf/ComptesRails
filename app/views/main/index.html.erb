<div class="container">
<h1>Les Comptes</h1>
<% if false %>
<% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@entry.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @entry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
<%end%>
<div class="panel-heading">
  <a data-toggle="collapse" href="#myform"><%=t :show_form%></a>
</div>
<div class="panel-collapse collapse in" id="myform">
<%= form_for @main, as: :main, url: main_table_url, remote: true, html: {class:"form-inline"} do |f| %>
  <div class="form_row form-group form-group-sm col-sm-2">
  &nbsp;<%= f.label :cpS_ids %></br>
  <%= f.select :cpS_ids, Compte.to_select, {},{multiple:true, required:true, class:"form-control form-control-sm" }  %>
  </div>
  <div class="form_row form-group form-group-sm col-sm-2">
  &nbsp;<%= f.label :cpD_ids %></br>
  <%= f.select :cpD_ids, Compte.to_select, {},{multiple:true, required:false, class:"form-control form-control-sm" }  %>
  </div>
  <div class="form_row form-group form-group-sm col-sm-2">
  &nbsp;<%= f.label :date1 %></br>
  <%= f.text_field :date1, value:(@main.date1 ? l(@main.date1) : ''), "data-provide" => "datepicker", "data-date-format"=> t('date.formats.dp'), class: "datef form-control form-control-sm" %>
  </div>
  <div class="form_row form-group form-group-sm col-sm-2">
  &nbsp;<%= f.label :date2 %></br>
  <%= f.text_field :date2, value:(@main.date2 ? l(@main.date2) : ''), "data-provide" => "datepicker", "data-date-format"=> t('date.formats.dp'), class: "datef form-control form-control-sm" %>
  </div>
  <div class="form_row form-group form-group-sm col-sm-2">
  &nbsp;<%= f.label :category_ids %></br>
  <%= f.select :category_ids, Category.to_select, {},{multiple:true, required:false, class:"form-control form-control-sm" } %>
  </div>
  <div class="form_row form-group form-group-sm col-sm-2">
  &nbsp;<%= f.label :moyen_ids %></br>
  <%= f.select :moyen_ids, Moyen.to_select, {},{multiple:true, required:false, class:"form-control form-control-sm" }  %>
  </div>
  <div class="form_row form-group form-group-sm col-sm-4">
  &nbsp;<%= f.label :com %></br>
  <%= f.text_field :com, class:"form-control form-control-sm" %>
  </div>
  <div class="form_row form-group form-group-sm col-sm-1">
  &nbsp;<%= f.label :poS %></br>
  <%= f.text_field :poS, class:"form-control form-control-sm" %>
  </div>
  <div class="form_row radio radio-sm col-sm-5">
  &nbsp;<%= f.label :type %></br>
  <% @types.each do |mytype| %>
    <%= f.radio_button :type, mytype[:id] %><%= mytype[:txt] %></br>
  <% end %>
  </div>
  <div class="form_row form-group form-group-sm col-sm-2">
    <%= f.submit class: "btn btn-default" %>
    <%= hidden_field_tag(:locale,I18n.locale) %>
    <%= f.hidden_field(:nb) %>
    <%= f.hidden_field(:page) %>
  </div>
<% end %>
</div>
<div class="content">
  <p><%= @mypar %></p>
  <p><%= t("hello") %></p>
</div>
</div>
